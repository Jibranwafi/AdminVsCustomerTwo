@page "/Customer-modal"

@using Iuli.Cse19.CarRental.WebApp.Domain
@using Iuli.Cse19.CarRental.WebApp.Services
@inject CustomerEntityService OESService
@inject IJSRuntime JSRuntime

<!-- Modal -->
<div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
            @title
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form>
            <div class="md-form mb-4">
                <i class="fas fa-user prefix grey-text"></i>
                <label data-error="wrong" data-success="right" for="form3">Car Customer Name</label>
                <input type="text" id="form3" class="form-control validate" @bind="newCustomerInfo.CustomerName">
            </div>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <i class="fas fa-envelope prefix grey-text"></i>
                    <label data-error="wrong" data-success="right" for="form2">Car Customer Address</label>
                    <input type="text" id="form2" class="form-control validate" @bind="newCustomerInfo.CustomerAddress">
                </div>
                <div class="col-md-6 mb-4">
                    <i class="fas fa-envelope prefix grey-text"></i>
                    <label data-error="wrong" data-success="right" for="form2">Car Customer City</label>
                    <input type="text" id="form2" class="form-control validate" @bind="newCustomerInfo.CustomerCity">
                </div>
            </div>
            <div class="md-form mb-4">
                <i class="fas fa-envelope prefix grey-text"></i>
                <label data-error="wrong" data-success="right" for="form2">Car Customer Phone</label>
                <input type="text" id="form2" class="form-control validate" @bind="newCustomerInfo.CustomerPhone">
            </div>
            <div class="md-form mb-4">
                <i class="fas fa-envelope prefix grey-text"></i>
                <label data-error="wrong" data-success="right" for="form2">Car Customer Email</label>
                <input type="email" id="form2" class="form-control validate" @bind="newCustomerInfo.CustomerEmail">
            </div>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" @onclick="@onSubmit">Save changes</button>
      </div>
    </div>
  </div>
</div>

@code {
    [Parameter]
    public string modalId { get; set; }

    [Parameter]
    public String title { get; set; }

    [Parameter]
    public Customer newCustomerInfo { get; set; }

    [Parameter]
    public EventCallback<Customer> changedNewCustomerInfo { get; set; }

    protected override void OnParametersSet() { }

    private Task onSubmit()
    {
        return changedNewCustomerInfo.InvokeAsync(newCustomerInfo);
    }
}